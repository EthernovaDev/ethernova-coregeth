[Unit]
Description=Ethernova CoreGeth Node
After=network.target

[Service]
Type=simple
User=ethernova
Group=ethernova
EnvironmentFile=-/etc/ethernova/ethernova.env
ExecStart=/usr/local/bin/ethernova --datadir /var/lib/ethernova --networkid 77777 --http --http.addr 127.0.0.1 --http.port 8545 --http.api eth,net,web3,debug --ws --ws.addr 127.0.0.1 --ws.port 8546 --ws.api eth,net,web3,debug $ETHERNOVA_OPTS
Restart=on-failure
RestartSec=3
LimitNOFILE=1048576

[Install]
WantedBy=multi-user.target
